CREATE KEYSPACE surespot
WITH REPLICATION = {'class' : 'SimpleStrategy', 'replication_factor': 1};

USE surespot;

CREATE TABLE chatmessages (
  username    varchar,
  spotname    varchar,
  id          varint,
  iv          varchar,
  fromuser        varchar,
  fromversion varchar,
  touser          varchar,
  toversion   varchar,
  datetime    timestamp,
  data        varchar,
  mimetype    varchar,
  datasize    int,
  shareable   boolean,
  PRIMARY KEY (username, spotname, id));


CREATE TABLE messagecontrolmessages (
  username  varchar,
  spotname  varchar,
  id        varint,
  type      varchar,
  action    varchar,
  data      varchar,
  moredata  varchar,
  fromuser  varchar,
  PRIMARY KEY (username, spotname, id));

CREATE TABLE usercontrolmessages (
  username  varchar,
  id        varint,
  type      varchar,
  action    varchar,
  data      varchar,
  moredata  varchar,
  PRIMARY KEY (username, id));